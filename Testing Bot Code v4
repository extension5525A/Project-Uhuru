//Prototype Functions
bool compare(int base, int comp){

	bool same = false;

	writeDebugStreamLine(" Base: %i", base);
	writeDebugStreamLine("Comp: %i", comp);

	if(comp > (base - 10) && comp < (base + 10)){

		same = true;
	}//if


	return same;
}//compare



task autonomous()
{

  //Sets motor encoder value equal to zero
	nMotorEncoder(FL) = 0;
	nMotorEncoder(FR) = 0;
	nMotorEncoder(BL) = 0;
	nMotorEncoder(BR) = 0;
	SensorValue[sBS] = 0;

	bool BSdone = false;
	bool FLdone = false;
	bool FRdone = false;
	bool BLdone = false;
	bool BRdone = false;

	int totalSteps = 5;
	int ports = 5;




	int auto[5][5] = { {0,100,-100,100,-100},
   {20,100,-100,100,-100},
   {-20,100,-100,100,-100},
   {0,100,-100,100,-100},
   {0,0,0,0,0}
  };

  int motorsFinished = 0;

  for(int step = 0; step < totalSteps; step++){

    BSdone = false;
	  FLdone = false;
	  FRdone = false;
	  BLdone = false;
	  BRdone = false;

  writeDebugStreamLine("");
  writeDebugStreamLine("Step: %i", step);
  writeDebugStreamLine("");


  	while(motorsFinished != ports){

  		//BS MOTOR IF
			if(!BSdone){

				writeDebugStreamLine("BS");
    	  if(compare(auto[step][0], SensorValue[sBS])){
    			motor[BS] = 0;
  				motorsFinished++;
  				BSdone = true;
  				//writeDebugStreamLine("C");
	      }else if(auto[step][0] < SensorValue[sBS] && !BSdone){
  				motor[BS] = -30;
  				//writeDebugStreamLine("B");
  		  }else if(auto[step][0] > SensorValue[sBS] && !BSdone){
      		motor[BS] = 30;
      		//writeDebugStreamLine("A");
    	  }

			}//BS if end

			writeDebugStreamLine("FL");
			if(!FLdone){

				if(compare(auto[step][1], nMotorEncoder(FL))){
  	  			motor[FL] = 0;
  					motorsFinished++;
  					FLdone = true;
  					writeDebugStreamLine("A");
		      }else if(auto[step][1] < nMotorEncoder(FL) && !FLdone){
  					motor[FL] = -60;
  					writeDebugStreamLine("B");
   			  }else if(auto[step][1] > nMotorEncoder(FL) && !FLdone){
      			motor[FL] = 60;
      			writeDebugStreamLine("C");
    	  	}

			}//FL if end


			if(!FRdone){
				writeDebugStreamLine("FR");
				if(compare(auto[step][2], nMotorEncoder(FR))){
  	  			motor[FR] = 0;
  					motorsFinished++;
  					FRdone = true;
		      }else if(auto[step][2] < nMotorEncoder(FR) && !FRdone){
  					motor[FR] = -60;
   			  }else if(auto[step][2] > nMotorEncoder(FR) && !FRdone){
      			motor[FR] = 60;
    	  	}

			}//FR if end



			//BL if
			if(!BLdone){
				writeDebugStreamLine("BL");
				if(compare(auto[step][3], nMotorEncoder(BL))){
  	  			motor[BL] = 0;
  					motorsFinished++;
  					BLdone = true;
		      }else if(auto[step][3] < nMotorEncoder(BL) && !BLdone){
  					motor[BL] = -60;
   			  }else if(auto[step][3] > nMotorEncoder(BL) && !BLdone){
      			motor[BL] = 60;
    	  	}

			}//BL if end

			//BR if
			if(!BLdone){

				writeDebugStreamLine("BR");
				if(compare(auto[step][4], nMotorEncoder(BR))){
  	  			motor[BR] = 0;
  					motorsFinished++;
  					BRdone = true;
		      }else if(auto[step][4] < nMotorEncoder(BR) && !BRdone){
  					motor[BR] = -60;
   			  }else if(auto[step][4] > nMotorEncoder(BR) && !BRdone){
      			motor[BR] = 60;
    	  	}

			}//BR if end


      /*if((auto[step][4] + 20 > nMotorEncoder(BR) && nMotorEncoder(BR) > auto[step][4] - 20) && BRdone){
    		motor[BR] = 0;
  			motorsFinished++;
  			BRdone = false;
      }else if(auto[step][4] < nMotorEncoder(BR) && BRdone){
  			motor[BR] = -60;
  	  }else if(auto[step][4] > nMotorEncoder(BR) && BRdone){
      	motor[BR] = 60;
      }*/

   /* writeDebugStream("%d,", SensorValue[sBS]);
    writeDebugStream("%d,", nMotorEncoder(FL));
		writeDebugStream("%d,", nMotorEncoder(FR));
		writeDebugStream("%d,", nMotorEncoder(BL));
		writeDebugStreamLine("%d", nMotorEncoder(BR));*/






    //writeDebugStreamLine("%i", motorsFinished);
    }//While

    motorsFinished = 0;
    writeDebugStreamLine("New Step");
  }//for

  writeDebugStreamLine("OUT");

}//autonomous

/*---------------------------------------------------------------------------*/
/*                                                                           */
/*                              User Control Task                            */
/*                                                                           */
/*  This task is used to control your robot during the user control phase of */
/*  a VEX Competition.                                                       */
/*                                                                           */
/*  You must modify the code to add your own robot specific commands here.   */
/*---------------------------------------------------------------------------*/

task usercontrol()
{

	//boolean values representing if the the button is pressed or not
	int up8U = 0;
	int up8D = 0;
	bool upCh3 = false;
	bool downCh3 = false;
	bool upCh2 = false;
	bool downCh2 = false;

	//Varible that will hold if any button presses have changed
	bool change = false;

  //Sets motor encoder value equal to zero
	nMotorEncoder(FL) = 0;
	nMotorEncoder(FR) = 0;
	nMotorEncoder(BL) = 0;
	nMotorEncoder(BR) = 0;
	SensorValue[sBS] = 0;
	//Counts iterations through while loop so there isn't a constant stream of output data
	int iterations = 0;

  while (true)
  {

  //Driving code in tank drive
  /*motor[FR] = -vexRT[Ch2];
  motor[BR] = -vexRT[Ch2];
  motor[FL] = vexRT[Ch3];
  motor[BL] = vexRT[Ch3];*/

  //The driving is code this way so that it only drives at one speed and when the axis are full. This simplifies recording the autonomous because you don't have
  //to worry about varible speed

  //Driving for Ch2 axis
  if(vexRT[Ch2] > 100){
		motor[FR] = -60;//The motor power is 60 so the bot is slower and easier to manuver
		motor[BR] = -60;
  }else if(vexRT[Ch2] < -100){
		motor[FR] = 60;
		motor[BR] = 60;
  }else{
  	motor[FR] = 0;
		motor[BR] = 0;
  }


  //Driving for Ch3 axis
  if(vexRT[Ch3] > 100){
		motor[FL] = 60;//The motor power is 60 so the bot is slower and easier to manuver
		motor[BL] = 60;
  }else if(vexRT[Ch3] < -100){
		motor[FL] = -60;
		motor[BL] = -60;
  }else{
  	motor[FL] = 0;
		motor[BL] = 0;
  }



  //If 8U or 8D is pressed moves BS which is the bar spinner
	 if(vexRT[Btn8U] == 1){
   	 motor[BS] = 30;
 	 }else if(vexRT[Btn8D] == 1){
  		motor[BS] = -30;
 	 }else{
 	  motor[BS] = 0;
   }//end if else



   //Increases to count how many iterations through the while loop
	 iterations ++;


	 //These check if the state of a button has changed since the last iteration
	 if(up8U != vexRT[Btn8U]){
	 	 change = true;
   }

	 if(up8D != vexRT[Btn8D]){
	 	 change = true;
   }

   //These check for the axis of they have changed state
   if(upCh3 != (vexRT[Ch3] > 100)){
	   change = true;
   }

   if(downCh3 != (vexRT[Ch3] < -100)){
	   change = true;
   }

	 if(upCh2 != (vexRT[Ch2] > 100)){
	   change = true;
   }

   if(downCh2 != (vexRT[Ch2] < -100)){
	   change = true;
   }

   //If change is true
   if(change){
    writeDebugStream("%d,", SensorValue[sBS]);
    writeDebugStream("%d,", nMotorEncoder(FL));
		writeDebugStream("%d,", nMotorEncoder(FR));
		writeDebugStream("%d,", nMotorEncoder(BL));
		writeDebugStreamLine("%d", nMotorEncoder(BR));

    change = false;
   }

   //Changes what the state varibles are
   up8U = vexRT[Btn8U];
   up8D = vexRT[Btn8D];

   //So that if the axis do change form up to down or down to up, You don't need more if statements to track the change, just to see what it currently is
   upCh3 = false;
	 downCh3 = false;
	 upCh2 = false;
	 downCh2 = false;

   if(vexRT[Ch3] > 100){
   	upCh3 = true;
   }
   if(vexRT[Ch3] < -100){
   	downCh3 = true;
   }

   if(vexRT[Ch2] > 100){
   	upCh2 = true;
   }
   if(vexRT[Ch2] < -100){
   	downCh2 = true;
   }

  }//While


}//User control
